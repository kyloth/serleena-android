<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.kyloth.serleena.view.fragments.TrackFragment"
             android:id="@+id/track_layout"
             android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NESSUN PERCORSO ATTIVO"
        android:id="@+id/track_name_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="3/12"
        android:id="@+id/checkpoint_numbers_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="200 m"
        android:id="@+id/distance_text"
        android:layout_marginLeft="20dp"/>

    <com.kyloth.serleena.view.widgets.CompassWidget
        android:layout_width="90px"
        android:layout_height="90px"
        android:id="@+id/compass_widget_track"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/compass"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:20:00"
        android:id="@+id/last_partial_text"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-00:04:00"
        android:id="@+id/delta_text"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20px"/>

</LinearLayout>
