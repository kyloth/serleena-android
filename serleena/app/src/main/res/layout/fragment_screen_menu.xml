<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.kyloth.serleena.ScreenMenuFragment"
    android:columnCount="4"
    android:rowCount="4">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:id="@+id/old_screen_menu_exp_image"
            android:layout_column="0"
            android:contentDescription="@string/screen_menu_exp_image"
            android:layout_marginLeft="0dp"
            android:background="@drawable/hiking" />

        <TextView
            android:layout_width="100sp"
            android:layout_height="68dp"
            android:text="@string/screen_menu_exp_text"
            android:id="@+id/old_screen_menu_exp_text"
            android:layout_column="1"
            android:gravity="center"
            android:focusable="false"
            android:layout_marginLeft="1dp"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="61sp"
            android:layout_height="61sp"
            android:id="@+id/old_screen_menu_contact_image"
            android:layout_column="2"
            android:background="@drawable/contact"
            android:clickable="false"
            android:contentDescription="@string/screen_menu_contact_image"
            android:adjustViewBounds="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/screen_menu_contact_text"
            android:id="@+id/old_screen_menu_contact_text"
            android:layout_column="3"
            android:textSize="17sp"
            android:gravity="center"
            android:paddingLeft="5sp" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="61sp"
            android:layout_height="61sp"
            android:id="@+id/old_screen_menu_weather_image"
            android:layout_column="0"
            android:contentDescription="@string/screen_menu_weather_image"
            android:background="@drawable/weather" />

        <TextView
            android:layout_width="100sp"
            android:layout_height="68dp"
            android:text="@string/screen_menu_weather_text"
            android:id="@+id/old_screen_menu_weather_text"
            android:layout_column="1"
            android:focusable="false"
            android:layout_marginLeft="1dp"
            android:textSize="17sp"
            android:gravity="center" />

        <ImageView
            android:layout_width="61sp"
            android:layout_height="61sp"
            android:id="@+id/old_screen_menu_cardio_image"
            android:layout_column="2"
            android:background="@drawable/red_cross"
            android:clickable="false"
            android:contentDescription="@string/screen_menu_cardio_image"
            android:adjustViewBounds="false" />

        <TextView
            android:layout_width="100sp"
            android:layout_height="68dp"
            android:text="@string/screen_menu_cardio_text"
            android:id="@+id/old_screen_menu_cardio_text"
            android:layout_column="3"
            android:gravity="center"
            android:focusable="false"
            android:layout_marginLeft="1dp"
            android:textSize="17sp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="61sp"
            android:layout_height="61sp"
            android:id="@+id/old_screen_menu_compass_image"
            android:layout_column="0"
            android:contentDescription="@string/screen_menu_compass_image"
            android:background="@drawable/compass" />

        <TextView
            android:layout_width="100sp"
            android:layout_height="68dp"
            android:text="@string/screen_menu_compass_text"
            android:id="@+id/old_screen_menu_compass_text"
            android:layout_column="1"
            android:focusable="false"
            android:layout_marginLeft="1dp"
            android:textSize="17sp"
            android:gravity="center" />

        <ImageView
            android:layout_width="61sp"
            android:layout_height="61sp"
            android:id="@+id/old_screen_menu_sync_image"
            android:layout_column="2"
            android:background="@drawable/sync"
            android:clickable="false"
            android:contentDescription="@string/screen_menu_sync_image"
            android:adjustViewBounds="false" />

        <TextView
            android:layout_width="100sp"
            android:layout_height="68dp"
            android:text="@string/screen_menu_sync_text"
            android:id="@+id/old_screen_menu_sync_text"
            android:layout_column="3"
            android:gravity="center"
            android:focusable="false"
            android:layout_marginLeft="1dp"
            android:textSize="17sp" />
    </TableRow>

</TableLayout>
