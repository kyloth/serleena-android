<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.kyloth.serleena.ScreenMenuFragment"
    android:columnCount="4"
    android:rowCount="4">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:id="@+id/screen_menu_exp_image"
            android:layout_row="2"
            android:layout_column="0"
            android:contentDescription="@string/screen_menu_exp_image"
            android:layout_marginLeft="0dp"
            android:background="@drawable/hiking" />

        <TextView
            android:layout_width="100sp"
            android:layout_height="68dp"
            android:text="@string/screen_menu_exp_text"
            android:id="@+id/screen_menu_exp_text"
            android:layout_row="2"
            android:layout_column="1"
            android:gravity="center_vertical"
            android:focusable="false"
            android:layout_marginLeft="1dp"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:id="@+id/screen_menu_contact_image"
            android:layout_column="2"
            android:background="@drawable/contact"
            android:clickable="false"
            android:adjustViewBounds="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/screen_menu_contact_text"
            android:id="@+id/screen_menu_contact_text"
            android:layout_column="3"
            android:textSize="17sp" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    </TableRow>

</TableLayout>
