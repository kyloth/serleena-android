<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.kyloth.serleena.view.fragments.SyncFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="@string/sync_notPaired"
            android:id="@+id/button_sync"
            android:layout_gravity="center_horizontal|top"
            android:textSize="20sp"
            android:clickable="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/sync"
            android:background="@null"
            android:scaleType="fitCenter"
            android:contentDescription="@string/sync_notPaired" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/sync_token"
                android:id="@+id/textview_info"
                android:layout_gravity="center"
                android:gravity="bottom|center"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sync_token"
                android:id="@+id/textview_token"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:layout_marginBottom="15sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
