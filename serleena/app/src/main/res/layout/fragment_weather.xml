<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="com.kyloth.serleena.view.fragments.WeatherFragment"
              android:padding="5px" >

    <TextView
        android:id="@+id/weather_date_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Nessuna informazione disponibile"
        android:textSize="15px"
        android:gravity="top"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/weather_no_info"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Nessuna informazione disponibile"
        android:textSize="15px"
        android:gravity="top"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70px"
            android:layout_height="40px"
            android:text="Mattino"
            android:textSize="13px"
            android:gravity="center_vertical"/>

        <com.kyloth.serleena.view.widgets.WeatherWidget
            android:id="@+id/morning_widget"
            android:layout_width="40px"
            android:layout_height="40px" />

        <TextView
            android:id="@+id/morning_temp_text"
            android:layout_width="60px"
            android:layout_height="40px"
            android:text="25°"
            android:textSize="25px"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70px"
            android:layout_height="40px"
            android:text="Pomeriggio"
            android:textSize="13px"
            android:gravity="center_vertical"/>

        <com.kyloth.serleena.view.widgets.WeatherWidget
            android:id="@+id/afternoon_widget"
            android:layout_width="40px"
            android:layout_height="40px" />

        <TextView
            android:id="@+id/afternoon_temp_text"
            android:layout_width="60px"
            android:layout_height="40px"
            android:text="25°"
            android:textSize="25px"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70px"
            android:layout_height="40px"
            android:text="Sera"
            android:textSize="13px"
            android:gravity="center_vertical"/>

        <com.kyloth.serleena.view.widgets.WeatherWidget
            android:id="@+id/night_widget"
            android:layout_width="40px"
            android:layout_height="40px" />

        <TextView
            android:id="@+id/night_temp_text"
            android:layout_width="60px"
            android:layout_height="40px"
            android:text="25°"
            android:textSize="25px"
            android:gravity="center_vertical"/>

    </LinearLayout>

</LinearLayout>
